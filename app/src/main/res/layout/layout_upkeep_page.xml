<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#1a1a1a"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/view_upkeep"
                style="@style/upkeep"
                android:layout_width="150dp"
                android:layout_height="150dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_centerInParent="true"
                >
                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/upkeep_next_upkeep_mileage"
                    android:textColor="#00d4b9"
                    android:textSize="13sp"
                    android:layout_marginTop="15dp"
                    />

                <TextView
                    android:id="@+id/tv_next_mileage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#00d4b9"
                    android:textSize="40sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公里"
                    android:textColor="#00d4b9"
                    android:textSize="15sp"/>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp">

            <ImageView
                android:id="@+id/view_upkeep_time"
                style="@style/upkeep"
                android:layout_width="150dp"
                android:layout_height="150dp"
                />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="@string/upkeep_next_upkeep_time"
                android:textColor="#00d4b9"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_next_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="0"
                android:textColor="#00d4b9"
                android:textSize="40sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_next_time"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="天"
                android:textColor="#00d4b9"
                android:textSize="15sp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_upkeep_totle_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下次保养项目 共 0 项"
            android:textColor="#ffffff"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv_upkeep_totle_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="预计费用 0 元"
            android:textColor="#ffffff"
            android:textSize="16sp"

            />

        <Button
            android:id="@+id/btn_alreadyUpkeep"
            android:layout_width="70dp"
            android:layout_height="27dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_al_upkeep"
            android:text="已保养"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rl_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="6dp"
        />
</LinearLayout>