<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d000"
    android:gravity="center"
    android:orientation="vertical">


        <TextView
            android:id="@+id/tv_update_pop_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:maxWidth="500dp"
            android:text="发现新版本"
            android:textColor="#ffffff"
            android:textSize="36sp" />
        <TextView
            android:id="@+id/tv_update_app_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxWidth="500dp"
            android:padding="20dp"
            android:text="最新版本:3.8.1  新版本大小：19.79M"
            android:textColor="#ffffff"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/tv_update_pop_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxWidth="500dp"
            android:padding="20dp"
            android:text="图吧OBD汽车卫士后视镜最新版"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tv_update_confirm"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:background="@drawable/update_confirm"
                android:gravity="center"
                android:text="立即更新"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_update_cancle"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="80dp"
                android:layout_weight="1"
                android:background="@drawable/update_cancle"
                android:gravity="center"
                android:text="以后再说"
                android:textSize="30sp" />
    </LinearLayout>

</LinearLayout>