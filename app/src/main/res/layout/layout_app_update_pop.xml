<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d000"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/update_prompt_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:layout_marginTop="64dp"
        android:background="#00ff0000"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_update_pop_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="36dp"
            android:gravity="center"
            android:maxWidth="500dp"
            android:padding="20dp"
            android:text="发现新版本"
            android:textColor="#ffffff"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/tv_update_app_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_update_pop_title"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="36dp"
            android:gravity="center"
            android:maxWidth="500dp"
            android:padding="20dp"
            android:text="最新版本3.8.1  新版本大小：19.79M"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_update_pop_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_update_app_info"
            android:gravity="center"
            android:maxWidth="500dp"
            android:padding="20dp"
            android:text="有新的固件可升级,升级后,可实现远程查看车辆状态远程控制等功能"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_update_pop_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp">

            <View
                android:id="@+id/update_prompt_line"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="54dp"
                android:background="#0000FF00"
                android:gravity="center"
                android:textColor="#1a1a1a" />

            <TextView
                android:id="@+id/tv_update_confirm"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="54dp"
                android:layout_toLeftOf="@id/update_prompt_line"
                android:background="@drawable/update_confirm"
                android:gravity="center"
                android:text="立即更新"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_update_cancle"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="54dp"
                android:layout_toRightOf="@id/update_prompt_line"
                android:background="@drawable/update_cancle"
                android:gravity="center"
                android:text="以后再说"
                android:textSize="30sp" />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>